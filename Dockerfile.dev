# Use Node.js 20 as base image
FROM node:20

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for development mode)
RUN npm install
# Install @nestjs/schedule package
RUN npm install @nestjs/schedule

# Copy source code
COPY . .

# Expose port 3003 (default port for the application)
EXPOSE 3003

# Expose port 9229 for debugging
EXPOSE 9229

# Start the application in development mode
CMD ["npm", "run", "start:dev"]